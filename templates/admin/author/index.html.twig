{% extends 'base.html.twig' %}

{% block title %}Liste d'auteurs
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Liste d'auteurs</h1>

		<ul class="list-group list-group-flush">
			{% for author in authors %}
				<li>
					<div class="card mb-1">
						<div class="card-body">
							<div class="card-title d-flex justify-content-between">
								<a href="{{ path('app_admin_author_show', {id: author.id}) }}" class="stretched-link link-dark">
									<h2 class="mb-1">{{ author.name}}</h2>
								</a>

								<p class="text-muted">Identifiant :
									{{ author.getId() }}
								</p>
							</div>
						</div>
					</div>
				</li>
			{% else %}
				<li>Aucun enregistrement</li>
			{% endfor %}
		</ul>

		{{ pagerfanta(authors) }}
	</div>
{% endblock %}
